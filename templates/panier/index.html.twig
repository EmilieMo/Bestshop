{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


    <section class="bg-light p-3">
        <h1>Votre panier</h1>
    </section>

    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Photo</th>
                <th>Prix</th>
                {# <th>Total</th> #}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for element in dataPanier %}

                <tr>
                    <td>{{ element.produit.marque.nom ~ ' ' ~ element.produit.modele }}</td>
                    <td><img src="{{ asset('images/produit/' ~ element.produit.photo1) }}" style="max-height: 50px; max-width: 50px;" alt="test"></td>
                    {% if element.produit.remise is empty %}
                    <td >{{ element.produit.prix }} €</td>
                    {% else %}
                    <td>{{ element.produit.remise }} €</td>
                    {% endif %}
                    <td>
                        <a href="{{path("app_delete_panier", {id: element.produit.id})}}" class="btn btn-danger">
                            <i class="bi bi-cart-x"></i>
                        </a>
                    </td>
                </tr> 
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Votre panier est vide</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3">Total</td>
                <td class="text-end">{{ total }} €</td>
                <td>
                    <a href="" class="btn btn-danger">
                        <i class="bi bi-cart-x"></i>
                    </a>
                </td>
            </tr>
        </tfoot>
    </table>
    

{% endblock %}
